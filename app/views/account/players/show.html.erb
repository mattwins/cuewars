<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @player.name %>
</p>

<p>
  <b>Nickname:</b>
  <%= @player.nickname %>
</p>

<p>
  <b>Email:</b>
  <%= @player.email %>
</p>

<% unless @player.leagues.empty? %>
  <p>
    <b>Plays in the following leagues:</b>
    <ul>
    <% for league in @player.leagues %>
      <li><%= league.name %></li>
    <% end %>
    </ul>
  </p>
<% end -%>


<%= link_to 'Edit', edit_account_player_path(@player) %> |
<%= link_to 'Back', account_players_path %>
